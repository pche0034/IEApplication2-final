<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subexe.SeatedActivity">

    <TextView
        android:id="@+id/textView75"
        android:layout_width="278dp"
        android:layout_height="85dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="488dp"
        android:text="4.Hold, then switch legs."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="274dp"
        android:layout_height="73dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="304dp"
        android:text="2.Bend forward from the hips with your chest up, chin up. "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="278dp"
        android:layout_height="107dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="376dp"
        android:text="3.With your toes pointed up toward your nose on the extended leg, reach toward your toes. "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="416dp"
        android:layout_height="114dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seated2" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Step guideline :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="278dp"
        android:layout_height="99dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="192dp"
        android:text="1.Sitting up straight with legs extended in front of you, bend one knee up, then let that leg drop out to the side. "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <ImageButton
        android:id="@+id/back12"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_black_24dp" />

</android.support.constraint.ConstraintLayout>