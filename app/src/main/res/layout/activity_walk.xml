<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subexe.WalkActivity">

    <Button
        android:id="@+id/walk4"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Look for creative ways to get motivated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walk3" />

    <Button
        android:id="@+id/walk5"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Take safety precautions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walk4" />

    <Button
        android:id="@+id/walk2"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Donâ€™t push too hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walk1" />

    <Button
        android:id="@+id/walk1"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:text="Start with small steps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/walk3"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="32dp"
        android:text="Watch for the weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walk2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="416dp"
        android:layout_height="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walk2" />

    <ImageButton
        android:id="@+id/back8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_black_24dp" />

</android.support.constraint.ConstraintLayout>